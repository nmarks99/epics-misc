record(lso, "$(P)BaseURL") {
    field(DTYP, "asynOctetWrite")
    field(OUT, "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))BASE_URL")
}

record(lso, "$(P)Endpoint") {
    field(DTYP, "asynOctetWrite")
    field(OUT, "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))ENDPOINT")
}

record(bo, "$(P)GET") {
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))HTTP_GET")
}

record(lsi, "$(P)ResponseJSON") {
    field(DTYP, "asynOctetRead")
    field(INP, "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))RESPONSE")
    field(SIZV, 32767)
    field(SCAN, "I/O Intr")
}
